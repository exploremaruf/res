<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E1F5FE" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/design_default_color_primary" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="12dp" />
            <stroke android:width="2.5dp" android:color="@color/design_default_color_primary" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#F9F9F9" android:startColor="#FFFFFF" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#D1D1D1" />
        </shape>
    </item>

</selector>